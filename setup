#!/usr/bin/env bash

set -e

REPOSITORY="git@github.com:Lyr-7D1h/home-manager.git"

if cat /proc/release | grep -i archlinux &>/dev/null; then

	echo "Installing for archlinux"
	
	sudo pacman -S nix
	sudo sytemctl --user enable --now nix-daemon
	sudo usermod -aG nix-users $USER
	nix-channel --add https://nixos.org/channels/nixpkgs-unstable
	nix-channel --add https://github.com/nix-community/home-manager/archive/master.tar.gz home-manager
	export NIX_PATH=$HOME/.nix-defexpr/channels:/nix/var/nix/profiles/per-user/root/channels${NIX_PATH:+:$NIX_PATH}
	nix-channel --update
	nix-shell '<home-manager>' -A install
	. "$HOME/.nix-profile/etc/profile.d/hm-session-vars.sh"
	
	mkdir -f ~/.config
	rm -rf ~/.config/nixpkgs
	git clone $REPOSITORY ~/.config/nixpkgs 
	ln -s ~/.config/nixpkgs/bin ~/bin

	home-manager switch

fi
